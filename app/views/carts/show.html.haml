- if @cart.line_items.present?
  = link_to "Empty cart", delete_cart_path(@current_cart), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure?"}
  %table.table.mb-5
    %thead
      %th
        Image
      %th 
        Name
      %th 
        Vendor code
      %th 
        Price
      %th
      %th
        Amount
      %th
      %th
        Total
    %tbody
    - @cart.line_items.each do |line_item|
      %tr
        %td
          = image_tag(line_item.product.image.url(:thumb))
        %td
          = line_item.product.name
        %td
          = line_item.product.code
        %td
          = number_to_currency(line_item.product.price)
        %td
          = link_to "+", line_item_add_path(id: line_item), method: :post, class: 'btn btn-outline-success btn-sm'
        %td
          %center
            = line_item.quantity
        %td
          = link_to "-", line_item_reduce_path(id: line_item), method: :post, class: 'btn btn-outline-danger btn-sm'
        %td
          = number_to_currency(line_item.total_price)
        %td
          = link_to 'Remove', line_item_path(line_item), method: :delete, class: 'btn btn-danger'
  .mb-5
    = link_to 'Checkout', "#", class: 'btn btn-success'
- else
  %h2
    The cart is empty