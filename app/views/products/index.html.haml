= link_to 'New Product', new_product_path 

%br

%table
  %thead
    %tr
      %th Product Name
      %th Image
      %th Vendor code
      %th Price
      %th Description
      %th
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name 
        %td= image_tag(product.image.url, size: "100x100")
        %td= product.code
        %td= product.price
        %td= product.description
        %td= link_to 'Show', product_path(product)
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Delete', product_path(product), data: {method: :delete, confirm: "Are you sure?"} 


