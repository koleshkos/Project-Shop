= form_with model: @product do |f|
  = f.label :name
  = f.text_field :name, class: 'form-control'
  %br
  = f.label :image
  .edit-image
  - if @product.image?
    = image_tag @product.image.url
    .checkbox
      = label_tag :remove_image do 
        Remove image
      = f.check_box :remove_image, class: 'mb-3'
  = f.file_field :image
  = f.hidden_field :image_cache
  %br
  = f.label :code
  = f.text_field :code, class: 'form-control'
  %br
  = f.label :price
  = f.number_field :price, step: 0.01, class: 'form-control'
  %br
  = f.label :description
  = f.text_area :description, class: 'form-control'
  %br
  = f.submit "Submit", class: 'btn btn-primary mb-5'
  = link_to 'Cancel', products_path, data: { confirm: "Are you sure?" }, class: 'btn btn-danger mb-5'